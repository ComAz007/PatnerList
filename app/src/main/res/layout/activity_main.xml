<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPatnerList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/etPatnerTitle"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp" />

    <EditText
        android:id="@+id/etPatnerTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter patner Title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAddPatnerList"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnAddPatnerList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Patner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDeletePatnerList"
        app:layout_constraintStart_toEndOf="@+id/etPatnerTitle" />

    <Button
        android:id="@+id/btnDeletePatnerList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delet Patner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>